<p id="notice"><%= notice %></p>

<h2>Orders</h2>

<table class="table ">
  <thead>
    <tr>
      <th>Name</th>
      <th>Restaurant</th>
      <th>Date</th>
      <th>User</th>   

      <th>Invited</th>
      <th>Joined</th>

      <th>Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= order.name %></td>
        <td><%= order.restaurant %></td>
        <td><%= order.date %></td>
        <td><%= order.user %></td>
        <td> <%= link_to 'Show', order,class:"btn btn-primary" %> 
        <%= link_to 'Edit', edit_order_path(order) ,class:"btn btn-success"%> 
        <%= link_to 'Destroy', order,class:"btn btn-danger", method: :delete, data: { confirm: 'Are you sure?' } %>

        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

