
<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @order.name %>
</p>

<p>
  <strong>Restaurant:</strong>
  <%= @order.restaurant %>
</p>

<p>
  <strong>Menu img:</strong>
  <%= @order.menu_img %>
</p>

<p>
  <strong>Date:</strong>
  <%= @order.date.strftime("%Y-%m-%d") %>
</p>

<p>
  <strong>By:</strong>
  <%= @order.user.name %>
</p>

<%= link_to 'Invite Friend', edit_order_path(@order), class:"btn btn-success" %>

<div class="table-responsive">
<table class="table table-bordered table-hover ">
  <thead>
    <tr>
      <th>Person</th>
      <th>Item</th>
      <th>Amount</th>
      <th>Price</th>
      <th>Comment</th>
    </tr>
  </thead>

  <tbody>
    <% Orderdetail.where( :order_id=> @order.id ).each do |orderdetail| %>
      <tr>
      <td><%= orderdetail.user.name %></td>
        <td><%= orderdetail.item %></td>
        <td><%= orderdetail.amount %></td>
        <td><%= orderdetail.price %></td>
        <td><%= orderdetail.comment %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>

<% if @order.status !="finished" %>
<%= form_for([@order ,@order.orderdetails.build ]) do |f| %>
<table class="table">
  <tr>
  <th>Item</th>
  <th>Amount</th>
  <th>Price</th>
  <th>Comments</th>
  <th>Add</th>
  </tr>

<tr>
    <td><%= f.text_field :item %></td>
    <td><%= f.number_field :amount %></td>
    <td><%= f.text_field :price %></td>
    <td><%= f.text_area :comment %></td>
    <td><%= submit_tag("Submit") %></td>
</tr>
</table>
<% end %>


<% end %>

<%= link_to 'Back', orders_path , class: "btn btn-info" %>