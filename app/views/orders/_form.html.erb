<%= form_for @order ,:html => { :class => "form-horizontal center",:multipart => true} do |f| %>

  <% if @order.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@order.errors.count, "error") %> prohibited this order from being saved:</h2>

      <ul>
      <% @order.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.select :name,"<option value='Breakfast'>Breakfast</option><option value='Dinner'>Dinner</option><option value='Lunch'>Lunch</option>".html_safe , class: "form-control"%>

  </div>
  <div class="field">
    <%= f.label :"Restaurant Name" %><br>
    <%= f.text_field :restaurant %>
  </div>
  <div class="form-group">
      <%= f.label :From, "Write The restaurant Name:", class: "col-md-4 control-label" %>
      
      <div class="col-md-8">
        <%= f.text_field :restaurant, class: "form-control" %>
      </div>
  </div>
  <div class="form-group">
      <%= f.label :menu_img, "menu_img:", class: "col-md-4 control-label" %>
      <div class="col-md-8">
        <%= f.file_field :menu_img  %>
      </div>
  </div>

  <div class="form-group">
      <%= f.label :date, "date:", class: "col-md-4 control-label" %>
      <div class="col-md-8">
        <%= f.datetime_select :date, class: "form-control" %>
      </div>
  </div>

  <div class="form-group col-md-12" align='center' >
  <%= f.submit "Add Order", class: "btn btn-default btn-primary" %>
  </div> 
  
<% end %>