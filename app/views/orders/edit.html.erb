
<h1>Invite Friends</h1>
<% Invitation.where(:order_id => @order.id).each do |invits| %>
<%= invits.user_id %>
<% end %>
<%= form_tag("/users/invite", method: "get") do %>
  <p>
  <div class="col-md-8">
    <%= text_field_tag :search, params[:search],placeholder: "Add friend by name" ,class: "form-control" %>
    </div>
    <%= submit_tag "add", :name => nil , class: 'btn btn-success'%>
  </p>
<% end %>


<%= link_to 'Show', @order %> |
<%= link_to 'Back', orders_path %>
