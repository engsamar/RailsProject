<h1><%= @group.name %></h1>
<p id="notice"><%= notice %></p>

<%= form_for GroupsUser.new(@group_user) do |f| %>
   <div class="field">
    <%= f.label :group_id %><br>
    <%= f.number_field :group_id %>
  </div>
  <div class="field">
    <%= f.label :user_id %><br>
    <%= f.number_field :user_id %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>

<div class="row">
  <% @group.users.each do |friend|%>
    <div class="col-sm-6 col-md-4">
      <div class="thumbnail">
        <img src="..." alt="...">
        <div class="caption">
          <h3><%=friend.name%></h3>
          <p>
            <a href="#" class="btn btn-danger" role="button">Button</a>
          </p>
        </div>
      </div>
    </div>
  <%end%>
</div>

<%= link_to 'Back', groups_path %>