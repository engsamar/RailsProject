<p id="notice"><%= notice %></p>

<h1>Listing Invitations</h1>

<table>
  <thead>
    <tr>
      <th>User Friend</th>

    </tr>
  </thead>

  <tbody>
    <% @invitations.each do |invitation| %>
      <tr>
        <td><%= invitation.user_id %></td>
        <td><%= link_to 'Remove', invitation, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Invitation', new_invitation_path %>